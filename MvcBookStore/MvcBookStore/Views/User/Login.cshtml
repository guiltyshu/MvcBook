@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h4 style="color:red; text-align:center">@ViewBag.Thongbao</h4>
<h3 style="text-align:center">ĐĂNG NHẬP</h3>
<table align="center">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td align="left">Tên đăng nhập:</td>
            <td>
                @Html.TextBox("TenDn")
                @ViewData["Error_user_name"]
            </td>
        </tr>
        <tr style="height:40px">
            <td align="left">Mật khẩu:</td>
            <td>
                @Html.Password("Matkhau")
                @ViewData["Error_password"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>
                <input type="submit" value="Đăng nhập" style="width: 100px; margin: 10px" />
            </td>
            <td style="">
                <button style="width: 100px; margin: 10px; text-decoration: none">@Html.ActionLink("Đăng  ký", "Logup")</button>
            </td>
        </tr>
    }
</table>